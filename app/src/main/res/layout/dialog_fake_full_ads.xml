<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite_ffffff"
    android:paddingBottom="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rll_dialog_fake_full_ads__header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:padding="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/content_fake_title"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"/>

        <ImageView
            android:id="@+id/imv_dialog_fake_full_ads__close"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_cancel"
            android:padding="@dimen/_5sdp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rll_dialog_fake_full_ads__native_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@+id/rll_dialog_fake_full_ads__header"
        />

    <RelativeLayout
        android:id="@+id/rll_dialog_fake_full_ads__native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_above="@+id/btn_dialog_fake_full_ads__remove_ads"
        android:layout_below="@+id/rll_dialog_fake_full_ads__native_banner"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_dialog_fake_full_ads__more_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_above="@+id/btn_dialog_fake_full_ads__remove_ads"
        android:layout_below="@+id/rll_dialog_fake_full_ads__header"/>

    <Button
        android:id="@+id/btn_dialog_fake_full_ads__remove_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/bg_button_install"
        android:gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:text="@string/gift_remove_ads"
        android:textColor="@color/colorWhite_ffffff" />

</RelativeLayout>