<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24.0dip"
    android:background="@drawable/bg_popup_bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_popup_scan_file__close"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/ic_create_file_down" />

    <LinearLayout
        android:id="@+id/rll_infor_file__root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txv_popup_scan_file__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="24.0dip"
            android:paddingBottom="24.0dip"
            android:singleLine="true"
            android:text="@string/scan_file"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:indeterminateDrawable="@drawable/progress"
            android:layout_marginEnd="@dimen/_20sdp"/>


        <TextView
            android:id="@+id/txv_popup_scan_file__processbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="24.0dip"
            android:paddingBottom="24.0dip"
            android:text="@string/boxsdk_Please_wait"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>


</LinearLayout>