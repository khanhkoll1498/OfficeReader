<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnl_update_version__rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_dialog_update_version_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/ic_update_version" />

        <ImageView
            android:id="@+id/imv_dialog_update_version_close"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_cancel" />

    </RelativeLayout>

    <TextView
        android:id="@+id/imv_dialog_update_version_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:text="@string/update_app"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorInactive_8892A4" />


    <Button
        android:id="@+id/btn_dialog_update_version_ok"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/bg_dialog_update_version"
        android:text="@string/dialog_enable_new_update"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textAllCaps="false"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorWhite_ffffff" />
</LinearLayout>
